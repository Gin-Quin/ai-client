{
  "name": "@gin-quin/ai-client",
  "version": "1.0.3",
  "description": "A universal, easy-to-use AI client with unified interface for OpenAI, Claude, Gemini, and Groq.",
  "type": "module",
  "module": "./library/index.js",
  "repository": {
    "url": "https://github.com/Gin-Quin/ai-client"
  },
  "exports": {
    ".": "./library/index.js",
    "./claude": "./library/claude.js",
    "./openai": "./library/openAi.js",
    "./gemini": "./library/gemini.js",
    "./groq": "./library/groq.js",
    "./mistral": "./library/mistral.js"
  },
  "files": [
    "./library/",
    "./package.json"
  ],
  "scripts": {
    "check": "bun tsc --noEmit",
    "test": "bun test",
    "build": "bun check && bun build library/*.ts --minify --sourcemap --outdir library",
    "unbuild": "rm ./library/*.js*",
    "deploy": "bun run build && bun deploy:npm && bun deploy:jsr && bun run unbuild",
    "deploy:npm": "bun publish --access=public --allow-dirty",
    "deploy:jsr": "bun x jsr publish --allow-dirty --allow-slow-types"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.28.0",
    "@google/genai": "^1.13.0",
    "@mistralai/mistralai": "^1.7.5",
    "@types/node": "^24.2.1",
    "@valibot/to-json-schema": "^1.3.0",
    "groq-sdk": "^0.30.0",
    "openai": "^5.12.2",
    "valibot": "^1.1.0"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "private": false
}
